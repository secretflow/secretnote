{
  "name": "secretnote",
  "private": true,
  "files": [],
  "version": "0.0.0",
  "scripts": {
    "build:hatch": "python scripts/copy_static_files.py && python -m hatch clean && python -m hatch build -t sdist -t wheel",
    "format:black": "python -m black --check src tests",
    "lint:ruff": "python -m ruff check src tests",
    "publish:hatch": "python -m hatch publish ./dist",
    "test:pytest": "python -m pytest",
    "typecheck:pyright": "pyright --project ../.. src test"
  },
  "devDependencies": {
    "@secretflow/secretnote-ui": "workspace:^"
  }
}
