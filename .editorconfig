# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length=88

[*.py]
indent_size = 4

[*.ipynb]
indent_size = 4

[*.bazel]
indent_size = 4

[*.BUILD]
indent_size = 4

[Makefile]
indent_style = tab
