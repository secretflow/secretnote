{
  "name": "monorepo",
  "private": true,
  "license": "MIT",
  "author": "Tony Wu <tonywu6@protonmail.com>",
  "repository": "https://github.com/secretflow/notebook",
  "description": "Notebook suite for SecretFlow",
  "scripts": {
    "bootstrap": "./scripts/setup_all.sh",
    "postinstall": "is-ci || husky install",
    "lint:prettier": "prettier --check --ignore-unknown .",
    "lint": "nx run-many -t lint:prettier -t lint:eslint -t lint:stylelint -t lint:black -t lint:ruff",
    "test": "nx run-many -t test:pytest -t test:vitest",
    "typecheck": "nx run-many -t typecheck:tsc -t typecheck:pyright",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "nx run-many --nx-bail -t release",
    "nx": "nx",
    "start:docs": "nx run docs:start",
    "clean": "git clean -fX ."
  },
  "nx": {
    "includedScripts": [
      "lint:prettier"
    ]
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.27.1",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/node": "^18.16.19",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^0.32.4",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-mdx": "^2.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "nx": "^16.10.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "pyright": "^1.1.332",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "stylelint": "^15.11.0",
    "stylelint-config-css-modules": "^4.3.0",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-order": "^6.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.2.2",
    "vitest": "^0.32.4"
  },
  "engines": {
    "node": ">=16.20.0"
  },
  "packageManager": "pnpm@8.4.0"
}
